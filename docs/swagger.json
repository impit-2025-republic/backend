                }
            }
        },
        "usecase.LoginOutput": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "usecase.UpcomingEventList": {
            "type": "object",
            "properties": {
                "events": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/usecase.UpcomingEventOutput"
                    }
                },
                "total": {
                    "type": "integer"
                }
            }
        },
        "usecase.UpcomingEventOutput": {
            "type": "object",
            "properties": {
                "eventStatus": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "points": {
                    "type": "integer"
                },
                "startDate": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        }
    },
